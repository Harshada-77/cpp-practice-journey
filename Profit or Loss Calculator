/*
Program Name : Profit or Loss Calculator  
Description  : Calculates and prints profit, loss, or no loss/no gain.  
Input        : Cost price and selling price  
Output       : Displays profit/loss/no profit no loss  

Sample Run   :  
Enter Cost price=50  
Enter Selling price=75  
There's a Profit of 25 Rupees  
*/

#include<iostream>
using namespace std;
int main() {
    int cp, sp;
    cout << "Enter Cost price= ";
    cin >> cp;
    cout << "Enter Selling price= ";
    cin >> sp;
    if(cp > sp) {
        cout << "There's a Loss of " << cp - sp << " Rupees";
    } else if(cp < sp) {
        cout << "There's a Profit of " << sp - cp << " Rupees";
    } else {
        cout << "There's no profit no loss";
    }
    return 0;
}
